<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony Employment Exchange{% endblock %}</title>
        {% block stylesheets %}
        {# 'app' must match the first argument to addEntry() in webpack.config.js #}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav>
            <span class="icon">Symfony Employment Exchange</span>
            <a href="{{ url('applicant_index') }}">Index</a>
        {% if app.user %}
            {%  if "ROLE_APPLICANT" in app.user.roles %}
                <a href="{{ url('applicant_list') }}">Applied offers</a>
            {% endif %}
            {%  if "ROLE_ADMIN" in app.user.roles %}
                <a href="{{ url('company_index') }}">Companies</a>
                <a href="{{ url('user_index') }}">Users</a>
            {% endif %}
            {%  if "ROLE_COMPANY" in app.user.roles %}
                <a href="{{ url('offer_index') }}">Company Offers</a>
            {% endif %}
            | {{ app.user }} - <a href="{{ url('app_logout') }}">Log out</a>
        {% else %}
               <a href="{{ url('app_login') }}">Log in</a>
        {%  endif %}
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <footer>Symfony Employment Exchange.</footer>
    </body>
</html>
