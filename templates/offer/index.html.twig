{% extends 'base.html.twig' %}

{% block title %}Offers index {% endblock %}
{% block section %}Offers you have posted {% endblock %}

{% block body %}
<!-- TODO: set what happen if the user does not have a company-->
    {{ include('offer/_company_information.html.twig') }}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Salary</th>
                <th>Applicants</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.title }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.salary }}</td>
                <td>{{ offer.applicants | length }}</td>
                <td>
                    <a href="{{ path('offer_show', {'id': offer.id}) }}">show</a>
                    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no offers found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('offer_new') }}">Create new offer</a>
{% endblock %}
