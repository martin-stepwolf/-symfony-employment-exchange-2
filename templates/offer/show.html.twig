{% extends 'base.html.twig' %}

{% block title %}Show offer{% endblock %}
{% block section %}
    Offer details
    <small>
        {{ include('offer/_company_information.html.twig') }}
    </small>
    {% endblock %}

{% block body %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ offer.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ offer.salary }}</td>
            </tr>
            <tr>
                <th>Applicants</th>
                <td>
                {% for applicant in offer.applicants %}
                <b>{{ applicant.name }}</b> : {{ applicant.email }} <br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offer/_delete_form.html.twig') }}
{% endblock %}
